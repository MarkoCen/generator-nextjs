{
    "name": "<%= slugify(app.name) %>",
    "version": "<%= app.version %>",
    "description": "<%= app.desc %>",
    "scripts": {
        "format": "prettier --check --config .prettierrc --ignore-path .prettierignore ./**/*.{ts,js,tsx}",
        "format:fix": "prettier --write --config .prettierrc --ignore-path .prettierignore ./**/*.{ts,js,tsx}",
        "lint": "eslint --ignore-path .eslintignore -c .eslintrc.js --ext .js,.ts,.tsx .",
        "lint:fix": "eslint --ignore-path .eslintignore -c .eslintrc.js --ext .js,.ts,.tsx --fix .",
        "clean": "rimraf out && rimraf .next && rimraf build",
        "dev": "node scripts/dev-server.js",
        "build:client": "cross-env NODE_ENV=production next build",
        "build:server": "cross-env NODE_ENV=production rollup -c rollup.server.config.js",
        "build": "npm run clean && npm run build:server && npm run build:client",
        "start": "pm2-runtime start pm2.config.js --env production",
        "release": "./scripts/release.sh"
    },
    "keywords": [],
    "author": "<%= app.author %>",
    "license": "<%= app.license %>",
    "private": <%= app.private %>,
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint",
            "pre-push": "npm run lint && npm run format",
            "post-merge": "npm i"
        }
    },
    "lint-staged": {
        "*.(ts|tsx|js|json|md|html)": "prettier --config .prettierrc --ignore-path .prettierignore --write"
    },
    "dependencies": {
        "@babel/runtime": "^7.8.4",
        "@reduxjs/toolkit": "^1.3.5",
        "@zeit/next-css": "^1.0.1",
        "@zeit/next-sass": "^1.0.1",
        "axios": "^0.19.2",
        "body-parser": "^1.19.0",
        "cross-env": "^7.0.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^3.21.3",
        "next": "^9.3.6",
        "next-fonts": "^1.0.3",
        "next-i18next": "^4.4.1",
        "next-redux-wrapper": "^4.0.1",
        "node-sass": "^4.13.1",
        "pm2": "^4.4.0",
        "prettier": "^2.0.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "^6.0.0",
        "react-redux": "^7.2.0",
        "redux-localstorage": "1.0.0-rc5",
        "redux-localstorage-filter": "^0.1.1",
        "sitemap": "^6.1.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/register": "^7.8.3",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-json": "^4.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@types/body-parser": "^1.19.0",
        "@types/express": "^4.17.2",
        "@types/express-serve-static-core": "^4.17.2",
        "@types/helmet": "0.0.45",
        "@types/node": "^13.7.1",
        "@types/prettier": "^1.19.0",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.7",
        "@types/react-helmet": "^5.0.15",
        "@types/react-redux": "^7.1.8",
        "@types/redux-localstorage": "^1.0.8",
        "@types/redux-localstorage-filter": "^0.1.4",
        "@typescript-eslint/eslint-plugin": "^2.19.2",
        "@typescript-eslint/parser": "^2.19.2",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-preset-latest-node": "^4.0.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb-typescript": "^7.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-import-resolver-typescript": "^2.0.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.3",
        "eslint-plugin-react-hooks": "^1.7.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.7",
        "rimraf": "^3.0.2",
        "rollup": "^2.7.6",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-node-externals": "^2.1.6",
        "rollup-plugin-typescript2": "^0.26.0",
        "typescript": "^3.8.3"
    }
}
